# Configuration WaterBill API
# Copiez ce fichier vers .env et remplissez les valeurs

# Django Configuration
SECRET_KEY={VOTRE_CLE_SECRETE_DJANGO}
DEBUG=True

# Database Configuration (Docker)
POSTGRES_DB=waterbill
POSTGRES_USER=postgres
POSTGRES_PASSWORD={VOTRE_MOT_DE_PASSE_DB}
DATABASE_URL=postgres://postgres:{POSTGRES_PASSWORD}@waterbill-db:5432/waterbill

# Django Server Configuration
DJANGO_RUNSERVER=1

# Django Superuser (pour créer le superutilisateur)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@waterbill.local
DJANGO_SUPERUSER_PASSWORD={VOTRE_MOT_DE_PASSE_ADMIN}

# pgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD={VOTRE_MOT_DE_PASSE_PGADMIN}

# Twilio SMS Configuration (optionnel - pour SMS réels en production)
# Obtenez ces valeurs sur https://console.twilio.com/
TWILIO_ACCOUNT_SID={VOTRE_TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN={VOTRE_TWILIO_AUTH_TOKEN}
TWILIO_FROM_NUMBER={VOTRE_NUMERO_TWILIO}

# Frontend URL pour les liens de redirection SMS (optionnel)
FRONTEND_URL=https://waterbill.app

# Cache Configuration (pour throttling)
CACHE_URL=redis://redis:6379/1
